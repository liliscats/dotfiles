// Zed settings
// https://zed.dev/docs/configuring-zed
{
    // font
    "ui_font_size": 13.5,
    "buffer_font_size": 13.5,
    "buffer_font_family": "0xProto Nerd Font Mono",
    "ui_font_features": {
        "liga": true,
        "calt": true,
        "clig": true,
        "kern": true
    },

    // ui and theme
    "theme": "Everforest Dark",
    "always_treat_brackets_as_autoclosed": true,
    "cursor_blink": false,
    "show_call_status_icon": false,
    "centered_layout": {
        "left_padding": 0.5,
        "right_padding": 0.5
    },
    "collaboration_panel": {
        "button": false
    },
    "toolbar": {
        "selections_menu": true,
        "breadcrumbs": true,
        "quick_actions": true
    },
    "chat_panel": {
        "button": false
    },
    "assistant": {
        "default_model": {
            "provider": "copilot_chat",
            "model": "gpt-4o"
        },
        "version": "2",
        "enabled": true,
        "button": true
    },

    // copilot
    "copilot": {
        "disabled_globs": ["*.md", "*.txt"]
    },

    // editor
    "format_on_save": "off",
    "vim_mode": false,
    "tab_size": 4,
    "soft_wrap": "none",
    "terminal": {
        "shell": {
            "with_arguments": {
                "program": "/opt/homebrew/bin/fish",
                "args": []
            }
        },
        "font_family": "JetBrainsMono Nerd Font Mono",
        "font_size": 14
    },

    "base_keymap": "VSCode",
    "autosave": "on_focus_change",
    "auto_update": true,
    "use_autoclose": true,
    "confirm_quit": false
}
