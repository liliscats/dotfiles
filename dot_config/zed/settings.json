// Zed settings
// https://zed.dev/docs/configuring-zed

{
    // font
    "ui_font_size": 16,
    "buffer_font_family": "0xProto Nerd Font Mono",
    "buffer_font_size": 16,
    "autosave": "on_focus_change",

    // ui and theme
    "theme": "Ayu Dark",
    "collaboration_panel": {
        "button": true
    },
    "toolbar": {
        "breadcrumbs": true,
        "quick_actions": true
    },
    "chat_panel": {
        "button": true
    },

    // editor
    "vim_mode": false, // TODO: enable vim mode?
    "tab_size": 4,
    "terminal": {
        "shell": "system"
    },

    // other
    "auto_update": true,
    "use_autoclose": true,
    "confirm_quit": false
}
