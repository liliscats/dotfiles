[user]
	name = liliscats
	email = me@lilis.dev
	signingKey = 92C4779D1B5A80F3
[push]
	default = current
[pull]
	ff = only
	rebase = false
[init]
	defaultbranch = main
[core]
	autocrlf = input
	ignorecase = false
	editor = code --wait
	quotepath = false
[color]
	ui = true
	diff = auto
	status = auto
	branch = auto
[commit]
	gpgsign = true
[tag]
	gpgsign = true
[gpg]
	program = gpg
[ghq]
	root = ~/project
[alias]
	a = add
	co = checkout
	cob = checkout -b
	cm = commit -m
	s = status
	l = log --oneline --graph --decorate
	ls = log --show-signature
	all = add .
	b = branch
	ba = branch -a
[rebase]
	updateRefs = true
[fetch]
	prune = true
[status]
	showUntrackedFiles = all
[merge]
	conflictStyle = diff3
